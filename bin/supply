#!/usr/bin/env bash
# usage: bin/supply <build-dir> <cache-dir> <env-dir>

echo "-----> Start supply"
CONFIG_FILE=RustToolchain

# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
# Install/Update Rust toolchain
# - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - - -
VERSION=stable

# Import the toolchain configuration if present
if [ -f "$BUILD_DIR/$CONFIG_FILE" ]
then
  VERSION="$(cat "$BUILD_DIR/$CONFIG_FILE")"
fi

# Check our configuration options.
if [ -z "$VERSION" ]
then
  >&2 printf "failed: Rust VERSION is empty.\nTo use a version other than the Rust stable channel, add the desired version or 'nightly' to the file %s" $CONFIG_FILE
  exit 1
fi

if command -v rustup &> /dev/null
then
  # It's possible that $VERSION has changed or been updated since Rust was installed in this container
  echo "-----> Checking for new releases of Rust $VERSION channel"
  rustup self update
  rustup update "$VERSION"
  rustup default "$VERSION"
else
  echo "-----> Downloading rustup"
  curl https://sh.rustup.rs -sSf > rustup.sh
  chmod u+x rustup.sh
  echo "-----> Install Rust $VERSION channel"
  ./rustup.sh -y --default-toolchain "$VERSION"
  rm rustup.sh
fi

echo "<----- End supply"
